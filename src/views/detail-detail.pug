    script.
        document.addEventListener("DOMContentLoaded", function () {
            var a = 0;
            var men = document.getElementById("mobile__menu");
            var smenu = document.getElementById("m_secondary_menu");
            var menuToggleInput = document.querySelector('#menuToggle input[type="checkbox"]');

            menuToggleInput.addEventListener('click', function () {
                if (a === 0) {
                    men.classList.add("dispmenu");
                    smenu.classList.add("dispmenu");
                    a = 1;
                } else {
                    men.classList.remove("dispmenu");
                    smenu.classList.remove("dispmenu");
                    a = 0;
                }
            });

            let timeout;

            $(".copyEmojibtn").on("click", function() {
                debugger;
                const $e = $("#copyEmojiText");
                const $btn = $(this);
                const $tooltip = $("#myTooltip");
                const isHidden = $tooltip.hasClass("hidetooltip");
                const copied = "KopyalandÄ±!";

                $e.select();
                $e[0].setSelectionRange(0, 99999);

                document.execCommand("copy");

                if (isHidden) {
                $tooltip.removeClass("hidetooltip");
                } else {
                $tooltip.html(copied);
                }

                $btn.focus();

                clearTimeout(timeout);
                timeout = setTimeout(() => {
                $tooltip.addClass("hidetooltip");
                }, 1500);
            });

        });