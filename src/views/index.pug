extends ./layout/layout.pug
include emoji-footer.pug


block content

    header.header
        .container
            .row
            .col-12.text-center
                img.header__img(src="https://emojigraph.org/static/img/logo.fa9e46678e09.png" width="55" height="55" alt="img")
                span.fs-22.ml-4
                    | Emojigraph

                form.header__form.text-center(method="get" action="/tr/search/" name="search" data-simplesearch-form="")
                    .row
                        .col-11.header__div__form
                            .div__input.input-group.mb-3
                                input.search-input.header__input.main__header__input(type="text" name="q" required="" placeholder="Arama ..."  value="" data-search-input="search/")
                                input(type="hidden" name="searchLang" value="tr")
                                .input-group-append
                                    button.search-submit.header__button.light__search__button.btn.btn-outline-secondarys(type="submit")
                                        img(src="https://emojigraph.org/static/img/search-icon17DARK.a63ca5f1c508.svg" width="20" height="20" alt="⚲")
                                    //- button.search-submit.header__button.dark__search__button.btn.btn-outline-secondarys(type="submit")
                                    //-     img(src="https://emojigraph.org/static/img/search-icon17DARK.a63ca5f1c508.svg" width="20" height="20" alt="⚲")
                                .change__language.language__main
                                    .hide__arrow
                                        label(for="sitelang") 
                                            | TR 
                                            i.down.solid
                                        select.select__searchLanguage#sitelang(onchange="javascript:location.href = this.value;")
                                            option(value="/") English
                                            option(value="/ar/") العربيّة
                                            option(value="/da/") dansk
                                            option(value="/de/") Deutsch
                                            option(value="/el/") Ελληνικά
                                            option(value="/es/") español
                                            option(value="/fr/") français
                                            option(value="/he/") עברית
                                            option(value="/hi/") हिंदी
                                            option(value="/id/") Bahasa Indonesia
                                            option(value="/it/") italiano
                                            option(value="/ja/") 日本語
                                            option(value="/ko/") 한국어
                                            option(value="/ms/") Bahasa Melayu
                                            option(value="/nb/") norsk (bokmål)
                                            option(value="/nl/") Nederlands
                                            option(value="/pl/") polski
                                            option(value="/pt/") Português
                                            option(value="/ru/") Русский
                                            option(value="/sv/") svenska
                                            option(value="/tr/" selected) Türkçe
                                            option(value="/uk/") Українська
                                            option(value="/vi/") Tiếng Việt
                                            option(value="/zh-hans/") 简体中文
    
